{
  "manifest_version": 3,
  "name": "AI微积分助教",
  "version": "1.0.0",
  "description": "智能微积分学习助手，支持作业批改和个性化学习建议",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "sidePanel",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "https://ap-southeast-1.run.claw.cloud/*",
    "https://cloud.myscript.com/*",
    "https://api.deepseek.com/*"
  ],
  
  "background": {
    "service_worker": "background/index.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "css": ["content/styles.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "AI微积分助教"
  },
  
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sidepanel/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 